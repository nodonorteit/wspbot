# WhatsApp Bot Multi-Tenant - Environment Configuration
# Copy this file as .env and adjust the values

# ===== GENERAL CONFIGURATION =====
NODE_ENV=development
LOG_LEVEL=info

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wspbot
DB_USER=postgres
DB_PASSWORD=password

# ===== REDIS CONFIGURATION =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== WAHA CONFIGURATION =====
WAHA_BASE_URL=http://localhost:3000
WAHA_API_KEY=
WAHA_TIMEOUT=30000
WAHA_RETRY_ATTEMPTS=3

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===== SERVICE PORTS =====
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=3001
TENANT_SERVICE_PORT=3002
TURNS_SERVICE_PORT=3003
WHATSAPP_SERVICE_PORT=3004
NOTIFICATIONS_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006

# ===== FRONTEND PORTS =====
ADMIN_PANEL_PORT=3006
TENANT_DASHBOARD_PORT=3007

# ===== CORS CONFIGURATION =====
CORS_ORIGIN=http://localhost:3000,http://localhost:3006,http://localhost:3007

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===== EMAIL CONFIGURATION (Optional) =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# ===== SMS CONFIGURATION (Optional) =====
SMS_PROVIDER=
SMS_API_KEY=
SMS_API_SECRET=

# ===== FILE STORAGE =====
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# ===== MONITORING =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ===== SECURITY =====
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# ===== MULTI-TENANT CONFIGURATION =====
DEFAULT_TENANT_PLAN=free
MAX_TENANTS_PER_USER=1
TENANT_SLUG_LENGTH=3

# ===== WHATSAPP MULTI-TENANT =====
MAX_SESSIONS_PER_TENANT=1
SESSION_TIMEOUT=3600000
QR_CODE_EXPIRY=300000

# ===== NOTIFICATIONS =====
NOTIFICATION_QUEUE_NAME=notifications
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# ===== ANALYTICS =====
ANALYTICS_RETENTION_DAYS=365
METRICS_COLLECTION_INTERVAL=60000

# ===== DEVELOPMENT =====
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_SERVICES=false