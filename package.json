{
  "name": "wspbot-monolithic",
  "version": "1.0.0",
  "description": "WhatsApp Bot Multi-Tenant - Monolithic Architecture",
  "private": true,
  "workspaces": [
    "services/*",
    "shared/types"
  ],
  "scripts": {
    "build": "npm run build:services",
    "build:services": "cd services/auth-service && npm run build && cd ../whatsapp-service && npm run build && cd ../..",
    "start:all": "concurrently \"npm run start --workspace=services/auth-service\" \"npm run start --workspace=services/whatsapp-service\" --names \"AUTH,WAHA\" --prefix name --prefix-colors \"blue.bold,yellow.bold\"",
    "dev:auth": "npm run dev --workspace=services/auth-service",
    "dev:whatsapp": "npm run dev --workspace=services/whatsapp-service",
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:whatsapp\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "monolithic",
    "multi-tenant",
    "nodejs",
    "typescript"
  ],
  "author": "nodonorteit",
  "license": "MIT"
}